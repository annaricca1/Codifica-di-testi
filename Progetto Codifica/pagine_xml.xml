			<!--Codifica delle pagine-->
			<text type="diary" subtype="personal diary" xml:id="diario">
				<body>
					<!--Codifica giorno 28 novembre 1943-->
					<ab type="day" xml:id="d28_11">				
						<!--Codifica pagina 20-->
						<pb facs="#pagina_20" xml:id="p1" n="20"/>
						<!--Riga 1-->
						<lb facs="#r1_p1_F" xml:id="r1_p1" n="1" />														
						<date xml:id="d28" when="1943-11-30" rend="align(right)">continua il 28 
							<choice>
								<abbr type="suspension">nov.</abbr>
								<expan cert="high" resp="#AR">novembre</expan>
							</choice>
						</date>
						<!--Riga 2-->
						<lb facs="#r2_p1_F" xml:id="r2_p1" n="2" />
						<persName ref="#GS">Giorgio</persName> è tornato da <placeName ref="#TO">Torino</placeName><pc join="left" type="punto" pos="." force="strong">.</pc>
						<persName ref="#ME"><abbr type="suspension"> E.M.</abbr></persName> gli ha 
						<!--Riga 3-->
						<lb facs="#r3_p1_F" xml:id="r3_p1" n="3" />dato <add hand="#EA" place="above"> ben </add> <num> 1000</num> lire e gli ha esposto la sua <w lemma="dottrina">dottri<!--Riga 4--><lb facs="#r4_p1_F" xml:id="r4_p1" n="4" break="no" rend="double stroke"/>na</w> economica<pc type="duepunti" pos=":" join="left">:</pc> favorire l<pc type="apostrofo" pos="'" force="weak">'</pc>argicoltura
						<!--Riga 5-->
						<lb facs="#r5_p1_F" xml:id="r5_p1" n="5" />
						e ostacolare l<pc type="apostrofo" pos="'" force="weak">'</pc>industria<pc join="left" type="punto" pos="." force="strong">.</pc> Così non ci sono
						<!--Riga 6-->
						<lb facs="#r6_p1_F" xml:id="r6_p1" n="6" />
						più operai a minacciare i capitalisti<pc join="left" type="punto" pos="." force="strong">.</pc>
						<!--Riga 7-->
						<lb facs="#r7_p1_F" xml:id="r7_p1" n="7" />
						Si sono ripetuti gli atti di violenza <add hand="#EA" place="bottom">da parte di banditi fuori dell<pc type="apostrofo" pos="'" force="weak">'</pc>esercito</add><pc join="left" type="punto" pos="." force="strong">.</pc> Perciò
						<!--Riga 8-->
						<lb facs="#r8_p1_F" xml:id="r8_p1" n="8" />
						ho l<pc type="apostrofo" pos="'" force="weak">'</pc>incarico di preparare un manifesto
						<!--Riga 9-->
						<lb facs="#r9_p1_F" xml:id="r9_p1" n="9" />
						da <del rend="overstrke"> appe </del> affiggere ai muri in cui si 
						<!--Riga 10-->
						<lb facs="#r10_p1_F" xml:id="r10_p1" n="10" />
						promette la repressione

						<!--Codifica pagina 21-->
						<pb facs="#pagina_21" xml:id="p2" n="21"/>
						<!--Gap data-->
                        <date when="1943-11-28" facs="#r0_p2_F" xml:id="r0_p2"><gap reason="omitted"/></date>
						<!--Riga 1-->
						<lb facs="#r1_p2_F" xml:id="r1_p2" n="1" />
						e si chiede la collaborazione del popolo<pc join="left" type="punto" pos="." force="strong">.</pc>
					</ab>

					<!--Codifica giorno 29 novembre 1943-->
					<ab type="day" xml:id="d29_11">			
						<!--Codifica pagina 22-->
						<pb facs="#pagina_22" xml:id="p3" n="22"/>
						<!--Riga 1-->
						<lb facs="#r1_p3_F" xml:id="r1_p3" n="1" />												
						<date xml:id="d29" when="1943-11-29" rend="align(right)">29 
							<choice>
								<abbr type="suspension">nov.</abbr>
								<expan cert="high" resp="#AR">novembre</expan>
							</choice>
						</date>
						<!--Riga 2-->
						<lb facs="#r2_p3_F" xml:id="r2_p3" n="2" />
						Stamane avevo tre appuntamenti<pc type="virgola" pos="," join="left">,</pc> ma 
						<!-- Riga 3-->
						<lb facs="#r3_p3_F" xml:id="r3_p3" n="3" />
						solo uno venne<pc join="left" type="punto" pos="." force="strong">.</pc> Tutto seccato andai da
						<!--Riga 4-->
						<lb facs="#r4_p3_F" xml:id="r4_p3" n="4" />
						<persName ref="#GS">
							<choice>
								<abbr type="suspension">G.</abbr>		
								<expan resp="#AR" cert="high">Giorgio Segre</expan>
							</choice>
					    </persName>
						 allora tornato da una spedizione <w>abor<!--Riga 5--><lb facs="#r5_p3_F" xml:id="r5_p3" n="5" break="no" rend="double stroke"/>tita</w><pc type="duepunti" pos=":" join="left">:</pc> dovevano assalire un 
						<choice>
                        	<sic>cammion </sic>
                            <corr resp="#AR" cert="high">camion </corr>
                       	</choice>
						<w lemma="carico">ca<!--Riga 6--><lb facs="#r6_p3_F" xml:id="r6_p3" n="6" break="no" rend="double stroke"/>rico</w> di militi<pc type="virgola" pos="," join="left">,</pc> ma il
						<choice>
                        	<sic>cammion </sic>
                            <corr resp="#AR" cert="high">camion </corr>
                       	</choice>
						non passò<pc join="left" type="punto" pos="." force="strong">.</pc> 
						<!--Riga 7-->
						<lb facs="#r7_p3_F" xml:id="r7_p3" n="7" />
						Poi presi la bicicletta e corsi a 
						<placeName ref="#TP">Torre Pellice</placeName><pc join="left" type="punto" pos="." force="strong">.</pc>
						<!--Riga 8-->
						<lb facs="#r8_p3_F" xml:id="r8_p3" n="8" />
						Mi trovai con
					</ab>

					<!--Codifica giorno 30 novembre 1943-->
					<ab type="day" xml:id="d30_11">				
						<!--Riga 9-->
						<lb facs="#r9_p3_F" xml:id="r9_p3" n="9" />												
						<date xml:id="d30" when="1943-11-30" rend="align(right)">30
							<choice>
								<abbr type="suspension">nov.</abbr>
								<expan cert="high" resp="#AR">novembre</expan>
							</choice>
						</date>
						
						<!--Riga 10-->
						<lb facs="#r10_p3_F" xml:id="r10_p3" n="10" />
						A questo punto ieri sera interruppi perchè 
						<!--Riga 11-->
						<lb facs="#r11_p3_F" xml:id="r11_p3" n="11" />
						<persName ref="#GI">Gina</persName> mi faceva chiacchierare<pc join="left" type="punto" pos="." force="strong">.</pc> Dunque mi 
						<!--Riga 12-->
						<lb facs="#r12_p3_F" xml:id="r12_p3" n="12" />
						trovai con <persName ref="#RM"><abbr type="suspension">R.M</abbr></persName>
						<pc type="virgola" pos="," join="left">,</pc> che mi presentò il <del rend="overstrike"> locale</del>
						<!--Riga 13-->
						<lb facs="#r13_p3_F" xml:id="r13_p3" n="13" />
						<choice>
                        	<abbr type="suspension">comm.</abbr>
                        	<expan cert="medium" resp="#AR">commissario</expan>
                        </choice>
						 del 
						 <orgName ref="#PDA">
						 <choice>
                        	<abbr>P.d.A.</abbr>
                        	<expan cert="high" resp="#AR">Partito d'Azione</expan>
                        </choice>
						</orgName>
						 delle bande del luogo<pc type="virgola" pos="," join="left">,</pc>
						<!--Riga 14-->
						<lb facs="#r14_p3_F" xml:id="r14_p3" n="14" />
						dicendomi<pc type="virgola" pos="," join="left">,</pc> naturalmente<pc type="virgola" pos="," join="left">,</pc> di parlare libero<pc join="left" type="punto" pos="." force="strong">.</pc>
						<!--Riga 15-->
						<lb facs="#r15_p3_F" xml:id="r15_p3" n="15" />
						Riferii che potevo svolgere male i miei
						<!--Riga 16-->
						<lb facs="#r16_p3_F" xml:id="r16_p3" n="16" />
						incarichi di partito<pc type="virgola" pos="," join="left">,</pc> date le istruzioni
						<!--Riga 17-->
						<lb facs="#r17_p3_F" xml:id="r17_p3" n="17" />
						moderate impartitemi una settimana
						<!--Riga 18-->
						<lb facs="#r18_p3_F" xml:id="r18_p3" n="18" />
						prima e che nella banda mi sentivo <w lemma="rispettato">ri<!--Riga 19--><lb facs="#r19_p3_F" xml:id="r19_p3" n="19" break="no" rend="double stroke"/>spettato</w><pc type="virgola" pos="," join="left">,</pc> ma molto estromesso<pc type="virgola" pos="," join="left">,</pc> perchè
						<!--Riga 20-->
						<lb facs="#r20_p3_F" xml:id="r20_p3" n="20" />
						non sono comunista<pc join="left" type="punto" pos="." force="strong">.</pc> Faccio un lavoro di <w lemma="commissioni">com<!--Riga 21--><lb facs="#r21_p3_F" xml:id="r21_p3" n="21" break="no" rend="double stroke" />missioni</w>
						<del rend="overstrke"><pc type="virgola" pos="," join="left">,</pc> molto simile qu </del> ed elaboro <w lemma="stilisticamente">sti<!--Riga 22--><lb facs="#r22_p3_F" xml:id="r22_p3" n="22" break="no" rend="double stroke" />listicamente</w> i documenti<pc type="virgola" pos="," join="left">,</pc> ma il primo in

					<!--Codifica pagina 23-->
						<!--Gap data-->
                        <date when="1943-11-30" facs="#r0_p4_F" xml:id="r0_p4"><gap reason="omitted"/></date>
						<pb facs="#pagina_23" xml:id="p4" n="23"/>
						<!--Riga 1-->
						<lb facs="#r1_p4_F" xml:id="r1_p4" n="1" break="no" rend="double stroke" />
						carico sarebbe da postino<pc type="virgola" pos="," join="left">,</pc> il secondo oggi è 
						<!--Riga 2-->
						<lb facs="#r2_p4_F" xml:id="r2_p4" n="2" />
						inutile<pc type="virgola" pos="," join="left">,</pc> per quanto onorevole <pc type="parentesti aperta" pos="()" force="weak" join="right">(</pc><choice><sic>A</sic><corr resp="#AR" cert="high">a</corr></choice> 
						 proposito<pc type="virgola" pos="," join="left">,</pc>
						<!--Riga 3-->
						<lb facs="#r3_p4_F" xml:id="r3_p4" n="3" />
						quando stamane consegnai a 
						<persName ref="#MO">Moretta</persName>
						 due
						<!--Riga 4-->
						<lb facs="#r4_p4_F" xml:id="r4_p4" n="4" />
						lettere di ringraziamento per persone che 
						<!--Riga 5-->
						<lb facs="#r5_p4_F" xml:id="r5_p4" n="5" />
						ci avevano aiutato<pc type="virgola" pos="," join="left">,</pc> in cui evitai la parola 
						<!--Riga 6-->
						<lb facs="#r6_p4_F" xml:id="r6_p4" n="6" />
						ringraziamento e la sostituii con <w lemma="compiacimento">compiaci<!--Riga 7--><lb facs="#r7_p4_F" xml:id="r7_p4" n="7" break="no" rend="double stroke"/>mento</w><pc type="virgola" pos="," join="left">,</pc> 
						<persName ref="#MO">
						<choice>
							<abbr type="suspension">M. </abbr>
							<expan cert="medium" resp="#AR">Moretta</expan>
						</choice>
						</persName>
						mi disse che volevano una bomba
						<!--Riga 8-->
						<lb facs="#r8_p4_F" xml:id="r8_p4" n="8" />
						da <num>6000</num> chili l<pc type="apostrofo" pos="'" force="weak">'</pc>una<pc join="left" type="interrogazione" pos="?" force="strong">?</pc><pc type="parentesti chiusa" pos=")" force="weak" join="left">)</pc><pc join="left" type="punto" pos="." force="strong">.</pc> Inoltre riferii che
						<!--Riga 9-->
						<lb facs="#r9_p4_F" xml:id="r9_p4" n="9" />
						<persName ref="#PI">Pietro</persName> andava<pc type="virgola" pos="," join="left">,</pc> per quanto mi risultava<pc type="virgola" pos="," join="left">,</pc> a 
						<!--Riga 10-->
						<lb facs="#r10_p4_F" xml:id="r10_p4" n="10" />
						<placeName ref="#TP">
							<choice>
								<abbr type="suspension">Tor. P. </abbr>
								<expan cert="high" resp="AR">Torre Pellice</expan>
							</choice>
						</placeName>
						per fare propaganda 
						<orgName ref="#PC">
							<choice>											
								<abbr type="suspension">com. </abbr>
								<expan cert="high" resp="#AR">comunista</expan>				
							</choice>
						</orgName>
						e che
						<!--Riga 11-->
						<lb facs="#r11_p4_F" xml:id="r11_p4" n="11" />
						credevo mio dovere farlo sapere<pc type="virgola" pos="," join="left">,</pc> dato che 
						<!--Riga 12-->
						<lb facs="#r12_p4_F" xml:id="r12_p4" n="12" />
						questa attività usciva dalla disciplina del
						<orgName ref="#FN">
							<choice>											
								<abbr type="organization">F.N.</abbr>
								<expan cert="high" resp="#AR">Fronte Nazionale</expan>				
							</choice>
						</orgName>
						<!--Riga 13-->
						<lb facs="#r13_p4_F" xml:id="r13_p4" n="13" />
						Mi risposero che nelle <add hand="#EA" place="above">loro</add> bande c<pc type="apostrofo" pos="'" force="weak">'</pc>era un certo <persName ref="#W">Walter</persName><pc type="virgola" pos="," join="left">,</pc> che
						<!--Riga 14-->
						<lb facs="#r14_p4_F" xml:id="r14_p4" n="14" />
						faceva propaganda 
						<orgName ref="#PC">
							<choice>											
								<abbr type="suspension">com </abbr>
								<expan cert="high" resp="#AR">comunista</expan>				
							</choice>
						</orgName>
						; quando passò a <w lemma="consigliare">cons<!--Riga 15--><lb facs="#r15_p4_F" xml:id="r15_p4" n="15" break="no" rend="double stroke" />igliare</w> la disobbedienza ai soldati<pc type="virgola" pos="," join="left">,</pc> fu allontanato
						<!--Riga 16-->
						<lb facs="#r16_p4_F" xml:id="r16_p4" n="16" />
						e<pc type="virgola" pos="," join="left">,</pc> come privato<pc type="virgola" pos="," join="left">,</pc> continua in città il suo lavoro<pc join="left" type="punto" pos="." force="strong">.</pc> <persName ref="#PI">Pietro</persName>
						<!--Riga 17-->
						<lb facs="#r17_p4_F" xml:id="r17_p4" n="17" />
						tiene i contatti<pc join="left" type="punto" pos="." force="strong">.</pc> Ora mi proposero di fare lo stesso
						<!--Riga 18-->
						<lb facs="#r18_p4_F" xml:id="r18_p4" n="18" />
						in 
						<placeName ref="#BA">
							<choice>
								<abbr type="suspension">B. </abbr>
								<expan cert="high" resp="#AR">Barge</expan>
							</choice>
						</placeName>
						<pc type="virgola" pos="," join="left">,</pc> cioè uscire dalla banda e rappresentare
						<!--Riga 19-->
						<lb facs="#r19_p4_F" xml:id="r19_p4" n="19" />
						il 
						<orgName ref="#PDA">
						 <choice>
                        	<abbr>P.d.A. </abbr>
                        	<expan cert="high" resp="#AR">Partito d'Azione</expan>
                        </choice>
						</orgName>
						Ma vi sono parecchie 
						<choice>
                        	<sic>obbiezioni </sic>
                            <corr resp="#AR" cert="high">obiezioni</corr>
                       	</choice>
						da
						<!--Riga 20-->
						<lb facs="#r20_p4_F" xml:id="r20_p4" n="20" />
						parte mia<pc type="duepunti" pos=":" join="left">:</pc> anzitutto voglio combattere la
						<!--Riga 21-->
						<lb facs="#r21_p4_F" xml:id="r21_p4" n="21" />
						guerra contro i 
						<choice>
